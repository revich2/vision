{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "lib": ["dom", "ESNext"],
        "module": "esnext",
        "moduleResolution": "node",
        "preserveConstEnums": true,
        "removeComments": false,
        "skipLibCheck": true,
        "sourceMap": true,
        "strict": true,
        "noImplicitAny": true,
        "target": "esnext",
        "outDir": "dist"
    },
    "include" : ["src"],
    "exclude": [
        "**/*.test.ts",
    ]
}
